{
  "input": "demo/input",
  "output": "demo/output",
  "watch": true,
  "watchConfig": true,
  "followUnlink": true,
  "dataOutput": "demo/output/data.json",
  "filters": [
    {
      "glob": "**/*.*",
      "use": [
        {
          "name": "lepto.jpeg",
          "quality": 75,
          "forceExt": "jpg"
        },
        {
          "name": "lepto.png",
          "compression": 9
        },
        {
          "name": "lepto.gif",
          "colors": 100,
          "optimizationLevel": 3,
          "interlaced": true
        },
        {
          "name": "lepto.svg"
        }
      ]
    },
    {
      "glob": ["**/*.{jpg,jpeg}"],
      "use": [
        {
          "name": "../lepto-resize",
          "maxWidth": 1200
        },
        {
          "name": "lepto.webp",
          "quality": 80
        },
        "../lepto-vibrant-color"
      ]
    },
    {
      "glob": "**/*.png",
      "use": [
        {
          "name": "../lepto-resize",
          "maxSize": 64,
          "retina": [
            2,
            3
          ]
        }
      ]
    }
  ]
}
