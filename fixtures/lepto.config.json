{
  "input": "fixtures/input",
  "output": "fixtures/output",
  "watch": true,
  "filters": [
    {
      "glob": "**/*.*",
      "use": [
        {
          "name": "lepto.jpeg",
          "quality": 60
        },
        {
          "name": "lepto-resize",
          "maxWidth": 1200
        }
      ]
    },
    {
      "glob": "**/*.jpg",
      "use": [
        {
          "name": "lepto-resize",
          "height": 100
        },
        {
          "name": "lepto.jpeg",
          "quality": 60
        }
      ]
    },
    {
      "glob": "**/*.png",
      "use": [
        {
          "name": "lepto.png",
          "quality": 60
        }
      ]
    }
  ]
}
