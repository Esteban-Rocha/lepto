{
  "input": "demo/input",
  "output": "demo/output",
  "watch": true,
  "dataOutput": "demo/output/data.json",
  "use": [
    {
      "name": "lepto.jpeg",
      "quality": 30
    },
    {
      "name": "lepto.png",
      "compression": 9
    }
  ],
  "filters": [
    {
      "glob": "**/*.{jpg,jpeg}",
      "use": [
        {
          "name": "lepto.resize",
          "maxWidth": 1200
        },
        {
          "name": "lepto.webp",
          "quality": 80
        },
        "lepto.vibrantColor"
      ]
    },
    {
      "glob": "**/*.png",
      "use": [
        {
          "name": "lepto.resize",
          "retina": [
            2,
            3
          ]
        }
      ]
    }
  ]
}
